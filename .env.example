# Bithumb API Configuration
BITHUMB_API_KEY=your_api_key_here
BITHUMB_SECRET_KEY=your_secret_key_here

# Trading Configuration
# 터틀 트레이딩 기본 설정
INITIAL_CAPITAL=10000000  # 초기 자본금 (원)
POSITION_SIZE_PERCENT=2  # 기본 포지션 크기 (%)
MAX_POSITION_PER_STOCK=10  # 종목당 최대 포지션 비율 (%)
PYRAMIDING_PERCENT=5  # 피라미딩 수익률 기준 (%)

# 매매 규칙
BREAKOUT_DAYS=20  # 돌파 기준일 (20일 신고가)
MIN_TRADING_VOLUME=50000000000  # 최소 거래대금 (원)
STOP_LOSS_MA=10  # 손절 이동평균선 (10일선)
PROFIT_TAKING_MA_1=5  # 익절 이동평균선 1 (5일선 - 50%)
PROFIT_TAKING_MA_2=10  # 익절 이동평균선 2 (10일선 - 나머지 50%)

# 자금 관리
ACCOUNT_LOSS_THRESHOLD=10  # 계좌 손실 임계값 (%)
POSITION_REDUCTION_RATE=20  # 포지션 축소 비율 (%)
PROFIT_PYRAMIDING_THRESHOLD=5  # 피라미딩 수익 임계값 (%)

# 시스템 설정
LOG_LEVEL=INFO
TRADING_MODE=simulation  # simulation, paper, real
DATA_UPDATE_INTERVAL=60  # 데이터 업데이트 간격 (초)
SLACK_WEBHOOK_URL=  # 알림용 Slack Webhook (선택사항)